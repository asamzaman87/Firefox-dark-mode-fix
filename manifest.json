{
  "manifest_version": 3,
  "version": "2.0.0",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_icon": {
      "128": "logo-128.png"
    }
  },
  "icons": {
    "128": "logo-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://auth.openai.com/*"
      ],
      "js": [
        "src/pages/content/loginMessage.tsx"
      ],
      "run_at": "document_end"
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "logo-128.png",
        "t-logo-128.png",
        "chrome-pin.png",
        "firefox-pin.png",
        "extension-guide.png",
        "pdf.worker.js",
        "injected.js",
        "webreader.png",
        "upload-docs-chrome.png",
        "upload-docs-firefox.png"
      ],
      "matches": ["https://chatgpt.com/*"]
    },
    {
      "resources": ["logo-128.png", "t-logo-128.png"],
      "matches": ["https://auth.openai.com/*"]
    }
  ]
}