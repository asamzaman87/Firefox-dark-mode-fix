{
  "name": "gpt-reader",
  "version": "1.6.0",
  "description": "Bring ChatGPT’s natural AI voices to your text or document—instantly read aloud or download high-quality speech for free",
  "license": "MIT",
  "url": "https://www.gpt-reader.com/",
  "scripts": {
    "build": "bun run build:chrome && bun run build:firefox && cp -r _locales dist_chrome/ && cp -r _locales dist_firefox/",
    "zip:build": "zip -r dist_chrome.zip dist_chrome/ && (cd dist_firefox && zip -r ../dist_firefox.zip .) && zip -r dist_edge.zip dist_chrome/ -x \"dist_chrome/.vite/*\"",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:firefox": "nodemon --config nodemon.firefox.json",
    "prefix:tailwind": "node prefix-tailwind.js"
  },
  "type": "module",
  "dependencies": {
